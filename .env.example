# RTD TIS Proxy Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control

# TIS Proxy Authentication (Required for SIRI subscriptions)
TIS_PROXY_USERNAME=your_username_here
TIS_PROXY_PASSWORD=your_password_here

# TIS Proxy Connection Settings (Optional - defaults shown)
TIS_PROXY_HOST=http://tisproxy.rtd-denver.com
TIS_PROXY_SERVICE=siri
TIS_PROXY_TTL=90000

# Rail Communication Service Settings (Optional - defaults shown)
RAILCOMM_SERVICE=railcomm
RAILCOMM_TTL=90000

# Additional Configuration (Optional)
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# BUS_COMM_TOPIC=rtd.bus.siri
# HTTP_PORT=8082